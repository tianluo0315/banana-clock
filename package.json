{
  "name": "banana-clock",
  "version": "1.0.0",
  "description": "A Pomodoro timer desktop app for Windows",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "package": "electron-builder --config electron-builder.json",
    "package:win": "electron-builder --config electron-builder.json --win",
    "test": "jest"
  },
  "keywords": ["pomodoro", "timer", "productivity", "electron", "react"],
  "author": "Banana Clock Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.2",
    "better-sqlite3": "^9.0.0",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.5.5",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.309.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.4.5",
    "@types/better-sqlite3": "^7.6.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.6.1",
    "postcss": "^8.5.0",
    "tailwindcss": "3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.1.6",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}